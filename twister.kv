<MyWidget>:
    Button:
        id: bt1
        text: 'Start!'
        size: root.size
        font_size:self.width/6.7
        #font_name: 'data/CrazyKrabs.woff'
        on_press: root.jogada(self)
        background_normal: 'data/white.png'
        background_down: 'data/black.png'
        background_color: 1, 1, 1, 0
        color: 1, 1, 1, 1
    Label:
        id: lb1
        text: 'Twister'
        #font_name: 'data/twister.ttf'
        font_size: root.width/25
        color: 1, 0, 0, .3
        center: root.center_x, root.center_y/10
    Image:
        source: 'data/black.png'
        id: img
        center: root.center_x, root.center_y+(root.center_y/2.5)

